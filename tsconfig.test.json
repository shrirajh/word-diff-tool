{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["tests/**/*", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}